<div class='exchange_box col-sm-12'>
  <div class='card'>
    <div class='card-header text-center'>
      Simule sua conversão
    </div>
    <div class='card-body'>
      <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
        <div class='local_currency principal'>
          <div class='form-group'>
            <p class='h5'>Moeda Local</p>
            <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
          </div>
        </div>
        <div class='form-group principal'>
          <input type='number' name='amount' id='amount' class='form-control' placeholder='Quantidade ($10)' step='any' required >
        </div>
        <div class='destination_currency principal'>
          <div class='form-group'>
            <p class='h5'>Moeda Pretendida</p>
            <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control', id: 'target_currency'%>
          </div>
        </div>
      <% end %>
        <div class='botao-inverter principal'>
          <div class='form-group'>
            <button type="button" id='invert' class="btn btn-primary" data-toggle="tooltip" title="Botão para inverter a moeda">
              Inverter Moeda
            </button>
          </div>
        </div>
        <hr/>
        <div class='botao-bitcoin'>
          <div class='form-group'>
            <button type="button" id='convertBitcoin' class="btn btn-success" data-toggle="tooltip" title="Botão para inverter a moeda">
              Bitcoin
            </button>
          </div>
        </div>
        <%= form_tag('/convert_bitcoin', method: :get, id: 'exchange_bitcoin_form') do %>
          <div class='form-group bitcoin'>
            <input type='number' name='amount_bitcoin' id='amount_bitcoin' class='form-control' placeholder='Quantidade Bitcoin(₿)' step='any' required >
          </div>
          <div class='destination_currency bitcoin'>
            <div class='form-group'>
              <p class='h5'>Converta Bitcoin para</p>
                <%= select_tag 'to_currency_bitcoin', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'to_currency_bitcoin'%>
            </div>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' data-toggle="tooltip" placeholder='Resultado' readonly
              title="Clique aqui para ver o resultado da conversão">
          </div>
          <div class='botao-voltar'>
            <div class='form-group'>
              <button type="button" id='voltar' class="btn btn-danger" data-toggle="tooltip" title="Voltar para tela de conversão">
              Voltar
              </button>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
